  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}/exm/Sods",
      "program": "${workspaceFolder}/exm/Sods/main3d.gnu.DEBUG.ex",
      "args": [ "${workspaceFolder}//exm/Sods/input1levs" ],
      // "cwd": "${workspaceFolder}/wrk",
      // "program": "${workspaceFolder}/wrk/main3d.gnu.DEBUG.ex",
      // "args": [ "${workspaceFolder}/wrk/input0levs" ],
      // "cwd": "${workspaceFolder}/lib/amrex-tutorials/ExampleCodes/GPU/CNS/Exec/Sod/",
      // "program": "${workspaceFolder}/lib/amrex-tutorials/ExampleCodes/GPU/CNS/Exec/Sod/CNS3d.gnu.DEBUG.CUDA.ex",
      // "args": [ "${workspaceFolder}/lib/amrex-tutorials/ExampleCodes/GPU/CNS/Exec/Sod/inputs" ],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath":"/usr/bin/gdb",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          },
      ]
    }

  ]
}